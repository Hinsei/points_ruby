<% if !current_user %>
  <div class="row align-items-center" style="height: 100%;">
    <div class="col-md-8 offset-md-2">
      <%= form_with url: session_path do |form| %>
        <div class="form-group">
          <%= form.label :name, class: "text-center" %>
          <%= form.text_field :name, name: "session[name]", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password, name: "session[password]", class: "form-control" %>
        </div>

        <%= form.submit "Login", class: "btn btn-block" %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="row" style="width: 100%; margin: 0; height: 100%;"> 
    <div class="col-md-6 text-center outlet-action" id="collect">
      <div style="margin-top: 25vh;">
        <%= link_to "Collect", collection_path, class: "root-text btn-block"%>
      </div>
    </div>
    <div class="col-md-6 text-center outlet-action" id="redeem">
      <div>
        <div style="margin-top: 25vh;">
          <%= link_to "Redeem", redemption_path, class: "root-text btn-block"%>
        </div>
      </div>
    </div>
  </div>
<% end %>
